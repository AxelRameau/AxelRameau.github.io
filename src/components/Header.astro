---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="fixed w-full top-0 z-50 lg:bg-noir">
  <nav class="relative px-5 py-2 md:py-4 flex justify-between items-center bg-noir mx-5 my-5 rounded-lg"> 
	<h2 class="text-beige text-xl"><a href="/">{SITE_TITLE}</a></h2>
    <div class="lg:hidden">
      <button class="navbar-burger flex items-center text-beige p-3">
        <svg
          class="block h-12 w-12 fill-current"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
        </svg>
      </button>
    </div>
    <ul
      class="hidden absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 lg:mx-auto lg:flex lg:items-center lg:w-auto lg:space-x-6"
    >
      <li>
        <HeaderLink
          class={"font-titre text-2xl text-beige hover:text-rouge cursor-pointer "}
          href="/">Accueil</HeaderLink
        >
      </li>
      <li class="text-gray-300"></li>
      <li>
        <HeaderLink
          class={"font-titre text-2xl text-beige hover:text-rouge cursor-pointer "}
          href="/blog">Projets</HeaderLink
        >
      </li>

      <li>
        <HeaderLink
          class={"font-titre text-2xl text-beige hover:text-rouge cursor-pointer "}
          href="/about">A propos</HeaderLink
        >
      </li>

      <li>
        <HeaderLink
          class={"font-titre text-2xl text-beige hover:text-rouge cursor-pointer "}
          href="/contact">Contact</HeaderLink
        >
      </li>
    </ul>

	<div class="social-links flex items-center gap-2">
		<a href="https://www.instagram.com/axel_aristote_rameau/" target="_blank">
		  <span class="sr-only">Suis moi sur Instagram</span>
		  <img
			class="w-10 h-square"
			src="instagram-b.png"
			alt="Découvre mes photos"
		  />
		</a>
		<a href='https://www.behance.net/43a086d5' target="_blank">
		  <span class="sr-only"
			>Tu peux aussi aller sur mon Behance pour voir mes autres projets</span
		  >
		  <img
			class="w-11 h-square"
			src="behance-b.png"
			alt="Découvre mes derniers projets"
		  />
		</a>
	  </div>
  
  </nav>
  <div class="navbar-menu relative z-50 hidden">
    <div class="navbar-backdrop fixed inset-0 bg-gray-800 opacity-25"></div>
    <nav
      class="fixed top-0 left-0 bottom-0 flex flex-col w-5/6 max-w-sm py-6 px-6 bg-white border-r overflow-y-auto h-full"
    >
      <div class="flex items-center mb-8">
        <a class="mr-auto text-3xl font-bold leading-none" href="#"> </a>
        <button class="navbar-close">
          <svg
            class="h-12 w-12 text-gray-400 cursor-pointer hover:text-noir"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="h-full">
        <ul class="flex flex-col gap-5 my-auto h-full mt-24">
          <li class="">
            <HeaderLink
              class={"font-titre text-3xl text-noir hover:text-rouge cursor-pointer "}
              href="./">Accueil</HeaderLink
            >
          </li>
          <li class="m-0">
            <HeaderLink
              class={"font-titre text-3xl text-noir hover:text-rouge cursor-pointer "}
              href="/blog">Projets</HeaderLink
            >
          </li>
          <li class="">
            <HeaderLink
              class={"font-titre text-3xl text-noir hover:text-rouge cursor-pointer "}
              href="/about">A propos</HeaderLink
            >
          </li>
          <li class="">
            <HeaderLink
              class={"font-titre text-3xl text-noir hover:text-rouge cursor-pointer "}
              href="/contact">Contact</HeaderLink
            >
          </li>
		  <div class="flex gap-5">
			<a href="https://www.instagram.com/axel_aristote_rameau/" target="_blank">
			  <span class="sr-only">Suis moi sur Instagram</span>
			  <img
				class="w-10 h-square "
				src="instagram-svg.svg"
				alt="Découvre mes photos"
			  />
			</a>
			<a href='https://www.behance.net/43a086d5' target="_blank">
			  <span class="sr-only"
				>Tu peux aussi aller sur mon Behance pour voir mes autres projets</span
			  >
			  <img
				class="w-11 h-square fill-noir hover:fill-rouge"
				src="behance-svg.svg"
				alt="Découvre mes derniers projets"
			  />
			</div>
        </ul>
      </div>
    </nav>
  </div>

  <style>
    @media (max-width: 1024px) {
      .social-links {
        display: none;
      }
    }
  </style>

  <script>
    // Burger menus
    document.addEventListener("DOMContentLoaded", function () {
      // open
      const burger = document.querySelectorAll(".navbar-burger");
      const menu = document.querySelectorAll(".navbar-menu");

      if (burger.length && menu.length) {
        for (var i = 0; i < burger.length; i++) {
          burger[i].addEventListener("click", function () {
            for (var j = 0; j < menu.length; j++) {
              menu[j].classList.toggle("hidden");
            }
          });
        }
      }

      // close
      const close = document.querySelectorAll(".navbar-close");
      const backdrop = document.querySelectorAll(".navbar-backdrop");

      if (close.length) {
        for (var i = 0; i < close.length; i++) {
          close[i].addEventListener("click", function () {
            for (var j = 0; j < menu.length; j++) {
              menu[j].classList.toggle("hidden");
            }
          });
        }
      }

      if (backdrop.length) {
        for (var i = 0; i < backdrop.length; i++) {
          backdrop[i].addEventListener("click", function () {
            for (var j = 0; j < menu.length; j++) {
              menu[j].classList.toggle("hidden");
            }
          });
        }
      }
    });
  </script>
</header>
